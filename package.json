{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "start": "node dist/server.js",
    "build": "npx tsc",
    "jasmine": "jasmine",
    "lint": "eslint src",
    "dev-up": "db-migrate up",
    "dev-down": "db-migrate reset",
    "test-up": "db-migrate up  --config ./config/database.json -e test",
    "test-down": "db-migrate reset  --config ./config/database.json -e test",
    "prettier": "npx prettier --write src",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
    "test": "npm run build && npm run test-up && cross-env ENV=test jasmine --config=spec/support/jasmine.json && npm run test-down ",
    "tsc": "tsc"
  },
  "author": "TCHINGUÉ MAKAMTÉ Patricia Kévine",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.19.0",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.5.1",
    "supertest": "^6.3.3",
    "typescript": "^4.1.3",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.15",
    "@types/jasmine": "^3.6.3",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/pg": "^7.14.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "cross-env": "^6.0.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "jasmine": "^4.0.0",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.3.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9"
  },
  "repository": "https://github.com/Pattykev/creating-an-api-with-postgresql-and-express.git"
}
